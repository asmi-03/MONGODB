#EMIT AN EVENT "greet" AND LISTEN TO IT
// code6.js
const EventEmitter = require("events");
// Create an instance of EventEmitter
const eventEmitter = new EventEmitter();
// Register (listen) for the "greet" event
eventEmitter.on("greet"
, (name) => {
console.log(`Hello, ${name}! Welcome to Node.js events.
`);
});
// Emit the "greet" event
eventEmitter.emit("greet"
,
"Asmi");

#CONNECT NODEJS TO MONGODB AND INSERT A USER RECORD
const { MongoClient } = require("mongodb");
// Local MongoDB URI
const uri = "mongodb://127.0.0.1:27017";
const client = new MongoClient(uri);
async function run() {
try {
await client.connect();
console.log("Connected to MongoDB âœ…");
const db = client.db("practical5"); // database name
const users = db.collection("users"); // collection name
const newUser = {
name: "Asmi Gupta"
,
email: "asmi@example.com"
,
age: 21,
createdAt: new Date()
};
const result = await users.insertOne(newUser);
console.log("User inserted with _id:"
, result.insertedId);
} catch (err) {
console.error("Error:"
, err);
} finally {
await client.close();
}
}
run();
